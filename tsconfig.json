{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "dist",
    "lib": [
      "es6"
    ],
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}